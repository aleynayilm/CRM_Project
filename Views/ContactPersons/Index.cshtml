@model IEnumerable<CRMV2.Models.ContactPerson>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <td class="align-middle">
        <a class="btn btn-outline-primary" asp-controller="ContactPersons" asp-action="Create">Create New</a>
    </td>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-controller="ContactPersons" asp-action="Update" asp-route-id="@item.Id">Update</a> |
                    <a class="btn btn-outline-trash" asp-controller="ContactPersons" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
