@model CRMV2.Models.Contract
@{
    ViewBag.Title = "Delete This Contract";
}

<h2>@ViewBag.Title</h2>

<p>Are you sure you want to delete this contract?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Contract Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Begin Date:</dt>
        <dd class="col-sm-10">@Model.BeginDate</dd>

        <dt class="col-sm-2">End Date:</dt>
        <dd class="col-sm-10">@Model.EndDate</dd>

        <dt class="col-sm-2">Is Active:</dt>
        <dd class="col-sm-10">@Model.Active</dd>

        <dt class="col-sm-2">Contract Type:</dt>
        <dd class="col-sm-10">@Model.Type</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
